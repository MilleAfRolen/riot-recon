{
  "compilerOptions": {
    "target": "ES2020", // Ensure ES2020 features are available
    "module": "CommonJS", // Use CommonJS modules
    "moduleResolution": "node", // Use Node-style module resolution
    "outDir": "./dist", // Output folder for compiled JS files
    "esModuleInterop": true, // Allow default imports for CommonJS modules
    "strict": true, // Enable strict type checking
    "skipLibCheck": true, // Skip library type checking (for faster builds)
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"], // Include ES2020 and DOM libraries
    "resolveJsonModule": true // Allow importing JSON modules
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
